//https://leetcode.com/problems/binary-tree-right-side-view/

class Solution {
public:
    vector<int> rightSideView(TreeNode* root) {
         vector<int> res;
        if (root==NULL)
            return res;
        
        queue<TreeNode*> q;
        q.push(root);
        while (!q.empty()) {
            int size = q.size();
            while (size) {
                size--;
                if (q.front()->left!=NULL) {
                    q.push(q.front()->left);
                }
                if (q.front()->right!=NULL) {
                    q.push(q.front()->right);
                }
                if (size==0) {
                    res.push_back(q.front()->val);
                }
                q.pop();
            
            }
        }
        
        return res;
    }
   
};
