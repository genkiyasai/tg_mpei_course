// https://leetcode.com/problems/power-of-three/

class Solution {
public:
    bool isPowerOfThree(int n) {
        if (n==1) return true;
        if (n==0) return false;
        if (n==3) return true;
        while (n%3==0) {
            n/=3;
        }
        if (n==1) return true;
        else return false;
    }
};
